<% javascript 'combo_input' %>

<%- model_class = Vacancy -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.edit', 'Edit %{model}'], :model => model_class.model_name.human.titleize %></h1>
</div>

<div class="row-fluid">
	<div class="col-md-6">
		<%= render :partial => 'form' %>

	</div>	

	<div class="col-md-6">


		<h3> Skills for " <%=t '.title', :default => @vacancy.name %> " vacancy</h3>


			<table class="table table-condensed" id="skills_table">

			<%= render partial: 'skills/skill', collection: @vacancy.skills, params: params %>

			</table>

			<h3> Add new skills</h3>
			<h5> type new or select existing</h5>			

			<%= render partial: 'skills/skills_new' %>			
	</div>		
</div>	










